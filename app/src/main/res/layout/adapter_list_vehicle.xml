<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewProductVehicle"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewIdVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label" />

        <TextView
            android:id="@+id/viewIdProductVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewNameProductVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewTipoVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label" />

        <TextView
            android:id="@+id/viewModelVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label" />

        <TextView
            android:id="@+id/viewColorVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label" />

        <TextView
            android:id="@+id/viewPriceProductVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_label"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
